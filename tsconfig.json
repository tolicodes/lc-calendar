{
  "compilerOptions": {
    "target": "ES2019",       // Compile to a version of JavaScript that Node 12+ supports
    "module": "CommonJS",     // Use CommonJS modules for compatibility with Node.js module system
    "lib": ["ES2019", "dom"],        // Include standard library features from ES2019
    "outDir": "./dist",       // Output directory for compiled files
    "rootDir": "./src",       // Root directory of your source files
    "strict": true,           // Enable all strict type-checking options
    "esModuleInterop": true,  // Enables compatibility with non-ES module spec compliant imports
    "skipLibCheck": true,     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure case consistency in imports
  },
  "include": ["src/**/*"],     // Include all files in the src directory
  "exclude": ["node_modules"]  // Exclude the node_modules directory
}
